 <modelVersion>4.0.0</modelVersion>

 <groupId>ca.mcgill.sel</groupId>
 <artifactId>touchcore</artifactId>
 <version>1.0.0-SNAPSHOT</version>
 <packaging>pom</packaging>

<!-- compile with compliance to JDK1.8 -->
<properties>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
</properties>

<profiles>
        <profile>
                  <id>desktop</id>
		  <activation>
                    <activeByDefault>true</activeByDefault>
                  </activation>
                  <modules>
			<module>ca.mcgill.sel.touchcore.view</module>
			<module>ca.mcgill.sel.touchcore.controller</module>
			<module>ca.mcgill.sel.classdiagram</module>
			<module>ca.mcgill.sel.classdiagram.edit</module>
			<module>ca.mcgill.sel.commons</module>
			<module>ca.mcgill.sel.core</module>
			<module>ca.mcgill.sel.core.edit</module>
			<module>ca.mcgill.sel.ram</module>
			<module>ca.mcgill.sel.ram.edit</module>
			<module>ca.mcgill.sel.ram.expressions</module>
<!--			<module>ca.mcgill.sel.ram.expressions.ide</module>  -->
<!--			<module>ca.mcgill.sel.ram.expressions.ui</module>   -->
			<module>ca.mcgill.sel.restif</module>
			<module>ca.mcgill.sel.restif.edit</module>
			<module>ca.mcgill.sel.restif.controller</module>
                  </modules>

<!-- https://stackoverflow.com/questions/34188861/maven-multimodule-project-can-i-jar-with-dependencies -->

        </profile>
        <profile>
		  <!-- experimental, don't use -->
                  <id>libs</id>
                  <modules>
                          <module>ca.mcgill.sel.commons</module>
                  </modules>
        </profile>
</profiles> 

